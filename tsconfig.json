{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "target": "es2016",                                  
    "module": "commonjs",                               
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true                     
  },
  "include": [
    "src/**/*.ts",
    "types/**/*.d.ts"                                        
  ],
  "exclude": [
    "node_modules", 
    "dist"
  ]
}
